<h1>Add New Recipe</h1>

<div>
  <%= form_with model: @recipe, url: recipes_path, method: :post, local: true do |form| %>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div>
      <%= form.label :preparation_time, "Preparation Time" %>
      <%= form.number_field :preparation_time %>
    </div>

    <div>
      <%= form.label :cooking_time, "Cooking Time" %>
      <%= form.number_field :cooking_time %>
    </div>

    <div>
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>

    <div>
      <%= form.submit "Create Recipe" %>
    </div>
  <% end %>
</div>