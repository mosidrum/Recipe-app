<main class="container-form-food">
  <div class="card-form-food">
    <div>
        <h2>Add Food</h2>
    </div>
    <div class="card-body-form-food">
      <%= form_for @food do |f| %>
        <div>
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div>
          <%= f.label :measurement_unit %>
          <%= f.text_field :measurement_unit, class: 'form-control' %>
        </div>

        <div>
          <%= f.label :price %>
          <%= f.number_field :price, class: 'form-control' %>
        </div>

        <div>
          <%= f.label :quantity %>
          <%= f.number_field :quantity, class: 'form-control' %>
        </div>

        <div>
          <%= f.submit 'Create Food', class: 'btn-create-new-food' %>
        </div>
      <% end %>
    </div>
  </div>
</main>