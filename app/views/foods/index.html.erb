<main class="container-food">
  <div class="card-container-food">
    <div class="card-header-food">
      <div>
        <%= link_to 'Add food', new_food_path, class: 'btn-add-food' %>
      </div>
    </div>
    <div class="card-body-food">
       <% if @foods.present? %>
        <small class="number-of-foods">
          Number of foods:
          <%= @foods.size %>
        </small>
      <% else %>
        <small class="No-foods-found">
          No foods found.
        </small>
      <% end %>
      <table class="table-food">
        <thead class="thead-food">
          <tr>
            <th>Food</th>
            <th>Measurement unit</th>
            <th>Unit price</th>
            <th>Unit Food</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @foods.each do |food| %>
            <tr>
              <td><%= food.name %></td>
              <td><%= food.measurement_unit %></td>
              <td><%= food.price %></td>
              <td><%= food.quantity %></td>
              <td>
                   <%= button_to "Delete", food_path(food), method: :delete, data: { turbo_method: :delete, confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, class: 'btn-delete-food' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</main>